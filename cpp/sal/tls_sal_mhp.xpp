// need to update 64 bytes at a time
static void updateHash(char *b,int len)
{
    int ptr=0;
    while (len>64)
    {
        ECCX08.updateSHA256((byte *)&b[ptr],64);
        len-=64; ptr+=64;
    }
    ECCX08.updateSHA256((const byte *)&b[ptr],len);
}

