void SAL_hmac(int htype,octad *T,octad *K,octad *M)
{

// Software is faster!!

/*
    if (htype==TLS_SHA256_T)
    {
        ECCX08.writeSlot(9,(const byte*)K->val,32);  // first writable slot is 8, use 9
        ECCX08.beginHMAC(9);
        int ptr=0;
