// IMPORTANT - Favourite group (as used in client Hello) must be placed first in list
int SAL_groups(int *groups)
{
    int n=0;
#if CRYPTO_SETTING==TINY_ECC  || CRYPTO_SETTING==EDDSA || CRYPTO_SETTING==TYPICAL
    n=3;
    groups[0]=X25519;
    groups[1]=SECP256R1; // maybe put it first, as we have h/w support for it. But many servers do not support it, and that leads to expensive handshake retries
    groups[2]=SECP384R1;
#endif
#if CRYPTO_SETTING==POST_QUANTUM
    n=4;
    groups[0]=KYBER768;
    groups[1]=X25519;
    groups[2]=SECP256R1;
    groups[3]=SECP384R1;
#endif
#if CRYPTO_SETTING==HYBRID
    n=5;
    groups[0]=HYBRID_KX;
    groups[1]=KYBER768;
    groups[2]=X25519;
    groups[3]=SECP256R1;
    groups[4]=SECP384R1;
#endif
    return n;
}

