bool SAL_initLib()
{ // Initialise library
    char raw[64];
    if (!ECCX08.begin()) {
        Serial.println("Failed to communicate with ECC508/ECC608!");
        return false;
    }
    for (int i = 0; i < 64; i++) raw[i] = ECCX08.random(256);  // Slow!!!!
    RAND_seed(&RNG, 64, raw);    
    return true;
}

void SAL_endLib()
{
    ECCX08.end();
}

